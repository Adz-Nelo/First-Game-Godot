script/source = "extends Node2D

@onready var animated_sprite = $AnimatedSprite2D
@onready var area = $Area2D

var coin = 1  # How much gold this coin gives

func _ready():
	# Play coin animation
	animated_sprite.play(\"Spin\")  # Change to your animation name
	
	# Connect the area signal
	area.body_entered.connect(_on_body_entered)

func _on_body_entered(body):
	if body.name == \"Player\":
		collect_coin(body)

func collect_coin(player):
	print(\"ðŸ’° Coin collected! Gold:\", Game.gold, \"â†’\", Game.gold + coin)
	
	# Add gold
	animated_sprite.play(\"Collect\")
	Game.gold += coin
	
	# Save game
	Utilities.saveGame()
	
	# Play sound effect
	AudioController.play_coin_collect()
	
	# Optional: Play collect animation/effect before disappearing
	await get_tree().create_timer(0.1).timeout
	
	# Remove coin
	queue_free()
"

