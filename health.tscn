script/source = "extends Node2D
@onready var animated_sprite = $AnimatedSprite2D
@onready var area = $Area2D

var heart = 1  # How much heart this gives

# Pulsating effect settings
@export var pulse_enabled = true
@export var pulse_scale_min = 0.9
@export var pulse_scale_max = 1.1
@export var pulse_speed = 10.0

var time = 0.0

func _ready():
	# Connect the area signal
	area.body_entered.connect(_on_body_entered)

func _process(delta: float) -> void:
	time += delta
	
	# Only pulsate if the heart is showing \"Heart\" animation (not \"Empty\")
	if pulse_enabled and animated_sprite.animation == \"Heart\":
		var current_pulse_speed = pulse_speed
		
		# If player has 1 HP or less, pulse MUCH faster!
		if Game.playerHP <= 1:
			current_pulse_speed = pulse_speed * 3.0  # 3x faster when critical!
		
		var pulse = lerp(pulse_scale_min, pulse_scale_max, (sin(time * current_pulse_speed) + 1.0) / 2.0)
		scale = Vector2(pulse, pulse)
	else:
		# If showing \"Empty\" animation, reset to normal scale
		scale = Vector2(1.0, 1.0)

func _on_body_entered(body):
	if body.name == \"Player\":
		collect_heart(body)

func collect_heart(player):
	area.set_deferred(\"monitoring\", false)
	
	print(\"ðŸ’“ Heart collected!\")
	Game.playerHP += heart
	
	pulse_enabled = false
	
	# Speed up ONLY the animation
	animated_sprite.speed_scale = 2.0
	animated_sprite.play(\"Collect\")
	
	AudioController.play_heart_collect()
	Utilities.saveGame()
	
	await animated_sprite.animation_finished
	queue_free()
"

