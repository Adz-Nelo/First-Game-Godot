[gd_scene load_steps=2 format=3 uid="uid://dcufthl211jbm"]

[sub_resource type="GDScript" id="GDScript_mpdvb"]
script/source = "extends HSlider

@export 
var bus_name: String
var bus_index: int

func _ready() -> void:
	bus_index = AudioServer.get_bus_index(bus_name)
	value_changed.connect(_on_value_changed)
	
	value = db_to_linear(
		AudioServer.get_bus_volume_db(bus_index)
	)
	
func _on_value_changed(value: float) -> void:
	AudioServer.set_bus_volume_db(
		bus_index,
		linear_to_db(value)
	)
"

[node name="volume-slider" type="HSlider"]
offset_right = 40.0
offset_bottom = 40.0
max_value = 1.0
step = 0.001
script = SubResource("GDScript_mpdvb")
