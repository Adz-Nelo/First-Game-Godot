@onready var player_hurt = $Hurt
@onready var end_level_sound = $EndLevel
@onready var coin_collect = $CoinCollect
@onready var player_death = $Death
@onready var game_over = $GameOver

func _ready():
	play_music()  # Start music when game starts

func play_music():
	if not music.playing:
		music.play()

func stop_music():
	music.stop()

func play_jump():
	jump_sound.play()
	
func play_stomp_enemy():
